<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:padding="10dp"
        android:text="Push Message Title"
        android:textColor="#222222"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/dialog_msg_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp" />
    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="10dp">-->

    <TextView
        android:id="@+id/dialog_msg_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8.5sp"
        android:padding="5dp"
        android:text="Push Message Body"
        android:textColor="#666666"
        android:textStyle="normal" />
    <!--</LinearLayout>-->

    <TextView
        android:id="@+id/dialog_msg_goto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#00b8f8"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Go To Screen"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="Go To Screen" />

    <TextView
        android:id="@+id/dialog_msg_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="#00b8f8"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="Cancel" />

</LinearLayout>