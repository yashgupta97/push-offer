            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-medium"
            android:padding="2dp"
            android:text="Push Message Title"
            android:textColor="#222222"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/list_msg_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_msg_title"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="Push Message Body"
            android:textColor="#444444"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/list_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_msg_body"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="Push Message Date"
            android:textColor="#666666"
            android:textSize="10sp"
            android:textStyle="normal" />

    </RelativeLayout>
